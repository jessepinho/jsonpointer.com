<section class="col-sm-6">
  <div class="form-group">
      {{textarea value=json
                 class="form-control code-input"
                 id="object"
                 rows="10"
                 placeholder=chosenPlaceholder.json}}
  </div>


  <div class="form-inline">
    <div class="input-group input-group-sm">
      <label for="pointer" class="input-group-addon">Pointer</label>
      {{input value=pointer
              class="form-control code-input"
              id="pointer"
              placeholder=chosenPlaceholder.pointer}}
    </div>

    <div class="btn-group btn-group-sm pull-right">
      <button class="btn btn-default" {{action "formatJson"}} {{bindAttr disabled="disableFormatJsonButton"}}>
        <span class="glyphicon glyphicon-align-left"></span>
        Format JSON
      </button>
      <button class="btn btn-default" {{action "randomizeData"}}>
        <span class="glyphicon glyphicon-random"></span>
        Randomize data
      </button>
    </div>
  </div>
</section>

<section class="output col-sm-6">
  <pre><code {{bind-attr class=":json-string hasPointerMatch"}}>{{#if json}}{{json-stringifier-highlighter stringifiedObject}}{{else}}Please enter a JSON object.{{/if}}</code></pre>
</section>
